{
  "name": "bdd_trello_tests",
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "test": "npx wdio run features/configs/wdio.conf.js",
    "test:smoke": "cross-env TAG_EXPRESSION=@smoke npx wdio run features/configs/wdio.conf.js",
    "test:homePage": "cross-env TAG_EXPRESSION=@homePage npx wdio run features/configs/wdio.conf.js",
    "test:boardPage": "cross-env TAG_EXPRESSION=@boardPage npx wdio run features/configs/wdio.conf.js",
    "test:only": "cross-env TAG_EXPRESSION=@only npx wdio run features/configs/wdio.conf.js",
    "eslint:prettier": "eslint \"**/*.{js,json}\" --fix && prettier --check \"**/**/*.{js,json}*\" --write",
    "precommit": "run-s format:fix lint",
    "format:fix": "pretty-quick --staged"
  },
  "lint-staged": {
    "*.{js,json}": [
      "npm run code:eslint",
      "npm run code:format",
      "git add"
    ]
  },
  "author": "Tinatin ABuladze",
  "license": "UNLICENSED",
  "description": "trello web's bdd tests",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@rpii/wdio-html-reporter": "^7.7.1",
    "@wdio/cli": "^9.2.1",
    "@wdio/cucumber-framework": "^9.1.3",
    "@wdio/local-runner": "^9.2.1",
    "@wdio/spec-reporter": "^9.1.3",
    "chai": "^5.1.2",
    "chromedriver": "^130.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cucumber": "^2.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-wdio": "^9.0.8",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-geckodriver-service": "^5.0.2",
    "wdio-html-nice-reporter": "^8.1.6"
  }
}